{
  "compilerOptions": {
    "module": "ESNext",                 
    "target": "ES2020",
    "jsx": "react-jsx",                 // Required for .tsx files
    "rootDir": "./src",
    "outDir": "./dist-debug",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,                  
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
